<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/vs"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            app:cardCornerRadius="8dp"
            android:elevation="5dp"
            android:layout_marginRight="4dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_vs"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_donut_small_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neosan_regular"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:text="H2H"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_prediction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="8dp"
                android:elevation="5dp"
                android:layout_marginRight="4dp"
                app:cardBackgroundColor="@color/md_cyan_400">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center" >

                    <ImageView
                        android:id="@+id/img_pred"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_wb_incandescent_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neosan_regular"
                        android:layout_toRightOf="@+id/img_pred"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:text="Prediction"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_event"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/purple_300">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_event"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_developer_board_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neosan_regular"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:layout_toRightOf="@+id/img_event"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:text="Events"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lineup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:orientation="vertical"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:elevation="5dp"
                android:layout_marginRight="8dp"
                app:cardBackgroundColor="@color/red_400">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_laneup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_record_voice_over_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neosan_regular"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_toRightOf="@+id/img_laneup"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:text="Lineups"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_statistics"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:orientation="vertical"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/blue_400">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_statis"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:src="@drawable/ic_assessment_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neosan_regular"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:layout_toRightOf="@+id/img_statis"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:text="Statistics"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>